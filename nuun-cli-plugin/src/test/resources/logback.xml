<configuration>
	<appender name="stdout" class="ch.qos.logback.core.ConsoleAppender">
		<encoder>
			<pattern>%d %-5level [%thread] [%class{50}:%line] %msg%n</pattern>
		</encoder>
	</appender>	

	<root level="DEBUG">
		<appender-ref ref="stdout"/>
	</root>
</configuration>
